{% extends 'base.html.twig' %}

{% block title %}Kayıt Ol{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />


{% endblock %}

{% block body %}

    <style>
        body {

        }
        .form-page-wrapper{
            display: flex;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Daha modern bir font */
            background-color: #f8f0e3; /* Resimdeki açık krem rengi */
            justify-content: center;
            align-items:center; /* Üste hizala */
            min-height: 100vh; /* Tam ekran yüksekliği */
            margin: 0;
            padding: 20px;
            box-sizing: border-box;

        }
    </style>
        <section class="hero-section">
        <div class="container">
            <!-- Header Row -->
            <div class="row align-items-center py-3">
                <div class="col-md-6">
                    <img src="{{ asset('/image/logo.png') }}" height="70px" alt="logo">
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <!-- Notification Button -->
                        <button class="notification-btn mr-3" title="Bildirimler">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>

                        <!-- Login Button -->
                        <button class="btn btn-secondary btn-sm mr-3">
                            <a href="http://localhost/login" style="color: white"><i class="fas fa-user mr-1" style="color: white"></i>Giriş Yap</a>
                        </button>

                        <!-- Language Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-toggle="dropdown" style="border-radius: 6px; font-weight: 600;">
                                <i class="fas fa-globe mr-1"></i>Dil
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-flag mr-2"></i>Türkçe
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-flag mr-2"></i>English
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Title Row -->
            <div class="row mt-3">
                <div class="col-12">
                    <h1 class="hero-title"> Kayıt Ol</h1>
                    <p class="hero-subtitle"></p>
                </div>
            </div>
        </div>
    </section>


    {# Yeni eklediğimiz ana sarmalayıcı div #}
    <div class="form-page-wrapper">


        <div class="form-column">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.gender) }}
            {{ form_row(registrationForm.title) }}
            {{ form_row(registrationForm.institution) }}
            {{ form_row(registrationForm.specialization) }}

            <div class="form-group">
                {{ form_label(registrationForm.country) }}
                {{ form_widget(registrationForm.country, {'attr': {'class': 'form-control country-select'}}) }}
                {{ form_errors(registrationForm.country) }}
            </div>

            {{ form_row(registrationForm.submit) }}
            {{ form_end(registrationForm) }}
        </div>
    </div>



