{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block body %}
<section class="hero-section">
    <div class="container">
        <!-- Header Row -->
        <div class="row align-items-center py-3">
            <div class="col-md-6">
                <img src="{{ asset('/image/dergipark_header.png') }}" height="70px" alt="logo">
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end align-items-center">
                    <!-- Notification Button -->
                    <button class="notification-btn mr-3" title="Bildirimler">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>

                    <!-- Login Button -->
                    <button class="btn btn-secondary btn-sm mr-3">
                        <a href="http://localhost/register" style="color: white"><i class="fas fa-user mr-1" style="color: white"></i>Giriş Yap</a>
                    </button>

                    <!-- Language Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-toggle="dropdown" style="border-radius: 6px; font-weight: 600;">
                            <i class="fas fa-globe mr-1"></i>Dil
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-flag mr-2"></i>Türkçe
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-flag mr-2"></i>English
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Title Row -->
        <div class="row mt-3">
            <div class="col-12">
                <h1 class="hero-title">21. Yüzyılda Fen ve Teknik</h1>
                <p class="hero-subtitle"></p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
