{# article_accordion_hardcoded.html.twig #}
<div id="articleAccordion" class="accordion custom-accordion">

    {# References Section #}
    <div class="card">
        <div class="card-header p-0" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link btn-block text-left px-3 px-md-4 py-3 active-header"
                        data-toggle="collapse" data-target="#collapseOne"
                        aria-expanded="true" aria-controls="collapseOne">
                    <i class="fas fa-book mr-2"></i> {{ 'article.references'|trans }}
                </button>
            </h5>
        </div>
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#articleAccordion">
            <div class="card-body">
                <div id="bibliographyContent" class="bibliography-container collapsed">
                    <ol class="list-unstyled">
                        {# Hardcoded References #}
                        {% for i in 1..45 %}
                            <li class="mb-3 ">
                                <span class="text-primary font-weight-bold">{{ i }}.</span> {{ ('article.reference_' ~ i)|trans }}
                            </li>
                        {% endfor %}
                    </ol>
                </div>
                <div class="bibliography-button-wrapper d-flex justify-content-center mt-4">
                    <button class="show-bibliography-btn btn btn-outline-primary" id="toggleBibliographyButton">
                        <i class="fas fa-book mr-2"></i> {{ 'article.show_all_references'|trans }}
                    </button>
                </div>
                <p class="text-muted small text-center mt-2">{{ 'article.total_references'|trans({'%count%': 45}) }}</p>
            </div>
        </div>
    </div>

    {# Details Section #}
    <div class="card">
        <div class="card-header p-0" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link btn-block text-left px-3 px-md-4 py-3 collapsed"
                        data-toggle="collapse" data-target="#collapseTwo"
                        aria-expanded="false" aria-controls="collapseTwo">
                    <i class="fas fa-info-circle mr-2"></i> {{ 'article.details'|trans }}
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#articleAccordion">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless table-sm">
                        <tbody>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.primary_language'|trans }}</td>
                            <td>{{ 'article.primary_language_value'|trans }}</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.topics'|trans }}</td>
                            <td>
                                <a href="#" class="text-primary">{{ 'article.topic.science'|trans }}</a>,
                                <a href="#" class="text-primary">{{ 'article.topic.technology'|trans }}</a>,
                                <a href="#" class="text-primary">{{ 'article.topic.engineering'|trans }}</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.section'|trans }}</td>
                            <td>{{ 'article.section_value'|trans }}</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.authors'|trans }}</td>
                            <td>
                                {# Authors are dynamic, so these remain as placeholders #}
                                <div class="mb-3">
                                    <a href="#" class="text-primary font-weight-bold">Yazar Adı Soyadı 1</a>
                                    <i class="fas fa-star text-warning ml-1" title="Corresponding Author"></i>
                                    <br>
                                    <small class="text-muted d-block">Kurum Adı 1</small>
                                    <small class="text-primary d-block">ORCID: 0000-0000-0000-0001</small>
                                    <small class="text-muted">{{ 'article.country'|trans }}</small>
                                </div>
                                <div class="mb-3">
                                    <a href="#" class="text-primary font-weight-bold">Yazar Adı Soyadı 2</a>
                                    <br>
                                    <small class="text-muted d-block">Kurum Adı 2</small>
                                    <small class="text-muted">{{ 'article.country'|trans }}</small>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.project_number'|trans }}</td>
                            <td>PROJE-12345</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.publication_date'|trans }}</td>
                            <td>01 Ocak 2023</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-muted detail-label">{{ 'article.publication_issue'|trans }}</td>
                            <td>{{ 'article.publication_issue_value'|trans }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# Citation Section #}
    <div class="card">
        <div class="card-header p-0" id="headingThree">
            <h5 class="mb-0">
                <button class="btn btn-link btn-block text-left px-3 px-md-4 py-3 collapsed"
                        data-toggle="collapse" data-target="#collapseThree"
                        aria-expanded="false" aria-controls="collapseThree">
                    <i class="fas fa-quote-right mr-2"></i> {{ 'article.cite'|trans }}
                </button>
            </h5>
        </div>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#articleAccordion">
            <div class="card-body">
                <h6 class="text-primary mb-3">{{ 'article.citation.apa'|trans }}</h6>
                <div class="citation-box p-3 bg-light border-left border-primary">
                    <p class="mb-0  citation-text" id="apaCitationText">
                        Ekinci, H., & Suel, H. (2023). Yaban Keçisinin (Capra aegagrus, ERXLEBEN) Popülasyon Büyüklüğü ve Yapısı: Göller Yöresi Örneği. <em>Science and Technique in the 21st Century</em>, 10(20), 40-46.
                    </p>
                </div>
                <div class="mt-3 d-flex flex-wrap">
                    <button class="btn btn-outline-primary btn-sm mr-2 mb-2 copy-btn"
                            data-text="Ekinci, H., & Suel, H. (2023). Yaban Keçisinin (Capra aegagrus, ERXLEBEN) Popülasyon Büyüklüğü ve Yapısı: Göller Yöresi Örneği. Science and Technique in the 21st Century, 10(20), 40-46.">
                        <i class="fas fa-copy mr-1"></i>{{ 'article.copy'|trans }}
                    </button>
                    <button class="btn btn-outline-secondary btn-sm mr-2 mb-2 bibtex-btn"
                            data-bibtex-content="@article{...}">
                        <i class="fas fa-download mr-1"></i>{{ 'article.bibtex'|trans }}
                    </button>
                    <button class="btn btn-outline-info btn-sm mb-2 ris-btn"
                            data-ris-content="TY  - JOUR%0AU - Ekinci, Harun%0AU - Suel, Halil%0ATI  - Yaban Keçisinin (Capra aegagrus, ERXLEBEN) Popülasyon Büyüklüğü ve Yapısı: Göller Yöresi Örneği%0AJO  - Science and Technique in the 21st Century%0AVL  - 10%0AIN  - 20%0ASP  - 40%0AEP  - 46%0APY  - 2023%0AER  -">
                        <i class="fas fa-database mr-1"></i>{{ 'article.ris'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

