{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}



    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 200px); /* Header ve footer'dan sonra kalan alana göre ayarlandı, gerekirse bu değeri ayarlayabilirsiniz */
            padding: 20px;
            box-sizing: border-box;
            background-color: #f8f0e3; /* Resimdeki açık krem rengi */
        }

        .login-card {
            background-color: #fff; /* Beyaz kart arkaplanı */
            padding: 40px;
            border-radius: 12px; /* Daha yumuşak köşeler */
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* Hafif gölge */
            max-width: 450px; /* Kartın maksimum genişliği */
            width: 100%; /* Responsive olması için */
            text-align: center; /* Başlık ve formun ortalanması için */
        }

        .login-card .h3 {
            color: #343a40; /* Koyu gri başlık */
            margin-bottom: 2rem; /* Başlık alt boşluğu */
            font-weight: 600; /* Daha kalın başlık */
        }

        .login-card label {
            text-align: left; /* Etiketleri sola hizala */
            display: block; /* Her etiketin ayrı satırda olması için */
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #555;
        }

        .login-card .form-control {
            margin-bottom: 1.5rem; /* Inputlar arası boşluk */
            border-radius: 8px; /* Input köşelerini yuvarla */
            border: 1px solid #ced4da; /* Hafif kenarlık */
            padding: 12px 15px; /* Daha iyi iç boşluk */
            font-size: 1rem;
        }

        .login-card .form-control:focus {
            border-color: #007bff; /* Odaklandığında mavi kenarlık */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Hafif odak gölgesi */
        }

        .login-card .checkbox {
            margin-top: -0.5rem; /* Checkbox'ı yukarı taşı */
            margin-bottom: 1.5rem;
            text-align: left; /* Checkbox metnini sola hizala */
        }

        .login-card .btn-primary {
            background-color: #007bff; /* Mavi buton */
            border-color: #007bff;
            padding: 12px 25px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px; /* Buton köşelerini yuvarla */
            transition: background-color 0.3s ease, border-color 0.3s ease;
            width: 100%; /* Tam genişlikte buton */
        }

        .login-card .btn-primary:hover {
            background-color: #0056b3; /* Hover'da daha koyu mavi */
            border-color: #004085;
        }

        .login-card .alert {
            margin-bottom: 1.5rem; /* Alert mesajı alt boşluğu */
            padding: 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
            text-align: left; /* Alert metnini sola hizala */
        }

        /* Responsive Düzeltmeler (isteğe bağlı) */
        @media (max-width: 576px) {
            .login-card {
                padding: 25px;
                border-radius: 8px;
            }
            .login-card .h3 {
                font-size: 1.5rem;
            }
            .login-card .form-control,
            .login-card .btn-primary {
                padding: 10px 15px;
                font-size: 1rem;
            }
        }
    </style>

    <section class="hero-section">
        <div class="container">
            <!-- Header Row -->
            <div class="row align-items-center py-3">
                <div class="col-md-6">
                    <img src="{{ asset('/image/dergipark_header.png') }}" height="70px" alt="logo">
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <!-- Notification Button -->
                        <button class="notification-btn mr-3" title="Bildirimler">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>

                        <!-- Login Button -->
                        <button class="btn btn-secondary btn-sm mr-3">
                            <a href="http://localhost/register" style="color: white"><i class="fas fa-user mr-1" style="color: white"></i>Kayıt Ol</a>
                        </button>

                        <!-- Language Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-toggle="dropdown" style="border-radius: 6px; font-weight: 600;">
                                <i class="fas fa-globe mr-1"></i>Dil
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-flag mr-2"></i>Türkçe
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-flag mr-2"></i>English
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Title Row -->
            <div class="row mt-3">
                <div class="col-12">
                    <h1 class="hero-title">Giriş yap</h1>
                    <p class="hero-subtitle"></p>
                </div>
            </div>
        </div>
    </section>


    <div class="login-container"> {# Yeni bir sarmalayıcı div ekledim #}
        <div class="login-card"> {# Login formunu bu kart içine aldım #}
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Giriş Yap</h1> {# Başlığı Türkçe yaptım #}
                <label for="inputEmail">E-posta</label> {# Etiketi Türkçe yaptım #}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

                <label for="inputPassword">Parola</label> {# Etiketi Türkçe yaptım #}
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Beni Hatırla
                    </label> {# Etiketi Türkçe yaptım #}
                </div>

                <button class="btn btn-lg btn-primary" type="submit">
                    Giriş Yap
                </button> {# Buton metnini Türkçe yaptım #}
                <button class="btn btn-lg btn-primary" type="submit">
                    <a href="http://localhost/register" style="color: white">Kayıt ol</a>
                </button> {# Buton metnini Türkçe yaptım #}
            </form>
        </div>
    </div>





